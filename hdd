# -*- mode: sh -*-
# vi: set ft=sh :

#= AUTHOR: farfanoide (https://github.com/farfanoide)
#= DESCRIPTION: Dev session for hddJsimulator

new_session -n 'Editor'
send_line 'Editor' '${EDITOR:-vi}'

new_window -n 'server'
send_line 'server' 'npm run serve'
vsplit 'server'
send_line 'server' 'npm run watch'
select_window 'Editor'
